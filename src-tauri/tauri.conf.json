{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "deno task bundle",
    "beforeDevCommand": "deno task bundle",
    "devPath": "../home",
    "distDir": "../home",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "grapevine",
    "version": "0.1.1"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
				"binaries/sillyz.computer"
			],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "computer.sillyz.kickstart",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
		"allowlist": {
      "all": false,
      "window": {
        "show": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/sillyz.computer",
            "sidecar": true
          }
        ]
      }
    }
  }
}
